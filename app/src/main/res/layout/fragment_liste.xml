<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:id="@+id/laLigne">
    <TextView
        android:id="@+id/nom" android:layout_width="match_parent"
        android:layout_height="40dp" android:layout_weight="1" />
    <TextView
        android:id="@+id/prenom" android:layout_width="match_parent"
        android:layout_height="40dp" android:layout_weight="1" />
    <TextView
        android:id="@+id/dateNaissance" android:layout_width="match_parent"
        android:layout_height="40dp" android:layout_weight="1" />
    <TextView
        android:id="@+id/codeDevoir" android:layout_width="match_parent"
        android:layout_height="40dp" android:layout_weight="1" />
    <TextView
        android:id="@+id/note" android:layout_width="match_parent"
        android:layout_height="40dp" android:layout_weight="1" />
</LinearLayout>